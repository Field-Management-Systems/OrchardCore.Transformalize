@model ParameterViewModel
@{
   var warning = Model.Parameter.Required && (string.IsNullOrEmpty(Context.Request.Query[Model.Parameter.Name].ToString()) || Context.Request.Query[Model.Parameter.Name].ToString() == "*");
}
<div class="p-1 form-group form-group-sm col-auto @(warning ? "has-warning" : string.Empty)" title="@(warning ? Model.Parameter.Label + " is required." : string.Empty)" required="@Model.Parameter.Required">
   <label class="sr-only" for="@Model.Parameter.Name">@Model.Parameter.Label</label>
   <div class="input-group input-group-sm">
      <div class="input-group-prepend">
         <span class="input-group-text">@Model.Parameter.Label</span>
      </div>
      @Html.Partial("Parameter", Model)
   </div>
</div>


