@model Module.ViewModels.TransformalizeSettingsViewModel

   <div class="form-group">
      <label asp-for="CommonArrangement">@T["Common Arrangement"]</label>
      <textarea asp-for="CommonArrangement" rows="5" class="form-control content-preview-text"></textarea>
      <div class="hint" style="font-size: smaller;">
         <strong>F11</strong>: <span>Full Screen</span>,
         <strong>Esc</strong>: <span>Exit Full Screen</span>,
         <strong>Ctrl-S</strong>: <span>Save</span>,
         <strong>Ctrl-Space</strong>: <span>Auto Complete</span>,
         <strong>Ctrl-F</strong>: <span>Find</span>,
         <strong>Ctrl-G</strong>: <span>Find next</span>,
         <strong>Shift-Ctrl-G</strong>: <span>Find previous</span>,
         <strong>Shift-Ctrl-F</strong>: <span>Replace</span>,
         <strong>Shift-Ctrl-R</strong>: <span>Replace all</span>.
      </div>
      <span class="hint">@T["This arrangement stores common items (i.e. connections) that may be referenced by name in other arrangements."]</span>
   </div>

@Html.Partial("CodeMirror", new CodeMirrorViewModel(Html.IdFor(m => m.CommonArrangement), .5))

<div class="form-group">
   <label asp-for="DefaultPageSizes">@T["Default Page Sizes"]</label>
   <input asp-for="DefaultPageSizes" class="form-control" />
   <span class="hint">@T["A comma delimited list of page sizes (integers).  These are used for all reports that do not set a page sizes."]</span>
</div>

<div class="form-group">
   <label asp-for="MapBoxToken">@T["MapBox Token"]</label>
   <input asp-for="MapBoxToken" class="form-control" />
   <span class="hint">@T["Get a token at "] <a href="https://www.mapbox.com" target="_blank">https://www.mapbox.com</a>.</span>
</div>