@model EditTransformalizeTaskPartViewModel
@using Module.ViewModels;

@{
   var viewLink = Url.Action("Review", "Task", new { Area = Module.Common.ModuleName, ContentItemId = Model.TransformalizeTaskPart.ContentItem.ContentItemId });
   var runLink = Url.Action("Run", "Task", new { Area = Module.Common.ModuleName, ContentItemId = Model.TransformalizeTaskPart.ContentItem.ContentItemId });
   var xmlLink = Url.Action("Run", "Task", new { Format = "xml", Area = Module.Common.ModuleName, ContentItemId = Model.TransformalizeTaskPart.ContentItem.ContentItemId });
   var jsonLink = Url.Action("Run", "Task", new { Format = "json", Area = Module.Common.ModuleName, ContentItemId = Model.TransformalizeTaskPart.ContentItem.ContentItemId });
   var schemaLink = Url.Action("Index", "Schema", new { Format = "xml", Area = Module.Common.ModuleName, ContentItemId = Model.TransformalizeTaskPart.ContentItem.ContentItemId });
}

<fieldset>
   <div class="btn-group float-right" role="group">
      <button title="view this task"
              type="button"
              class="btn btn-success btn-sm"
              onclick="window.open('@viewLink', '_blank');">
         <span class="fas fa-eye"></span>
      </button>
      <button title="run this task"
              type="button"
              class="btn btn-warning btn-sm"
              onclick="window.open('@runLink', '_blank');">
         <span class="fas fa-play"></span>
      </button>
      <button title="run this task as xml"
              type="button"
              class="btn btn-primary btn-sm"
              onclick="window.open('@xmlLink', '_blank');">
         <span class="fas fa-code"></span>
      </button>
      <button title="run this task as json"
              type="button"
              class="btn btn-secondary btn-sm"
              onclick="window.open('@jsonLink', '_blank');">
         <span class="fas fa-exchange-alt"></span>
      </button>
      <button title="query schema for the entities in this task"
              type="button"
              class="btn btn-info btn-sm"
              onclick="window.open('@schemaLink', '_blank');">
         <span class="fas fa-search-plus"></span>
      </button>
   </div>
</fieldset>

