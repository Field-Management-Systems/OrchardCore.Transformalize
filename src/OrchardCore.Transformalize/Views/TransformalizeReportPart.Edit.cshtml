@model EditTransformalizeReportPartViewModel
@using TransformalizeModule.ViewModels;
@using TransformalizeModule 

@{
   var Area = Common.ModuleName;
   var ContentItemId = Model.TransformalizeReportPart.ContentItem.ContentItemId;
   var viewLink = Url.Action("Index", "Report", new { Area , ContentItemId });
   var xmlLink = Url.Action("Run", "Report", new { Format = "xml", Area, ContentItemId });
   var jsonLink = Url.Action("Run", "Report", new { Format = "json", Area, ContentItemId });
   var logLink = Url.Action("Log", "Report", new { Format = "json", Area, ContentItemId });
   var schemaLink = Url.Action("Index", "Schema", new { Format = "xml", Area, ContentItemId });
}

<fieldset>
   <div class="btn-group float-right" role="group">
      <button title="view this report"
              type="button"
              class="btn btn-success btn-sm"
              onclick="window.open('@viewLink', '_blank');">
         <span class="fas fa-eye"></span>
      </button>
      <button title="run this report as xml"
              type="button"
              class="btn btn-primary btn-sm"
              onclick="window.open('@xmlLink', '_blank');">
         <span class="fas fa-code"></span>
      </button>
      <button title="run this report as json"
              type="button"
              class="btn btn-secondary btn-sm"
              onclick="window.open('@jsonLink', '_blank');">
         <span class="fas fa-exchange-alt"></span>
      </button>
      <button title="view this report's log"
              type="button"
              class="btn btn-warning btn-sm"
              onclick="window.open('@logLink', '_blank');">
         <span class="fas fa-clipboard-list"></span>
      </button>
      <button title="query schema for the entity in this report"
              type="button"
              class="btn btn-info btn-sm"
              onclick="window.open('@schemaLink', '_blank');">
         <span class="fas fa-search-plus"></span>
      </button>
   </div>
</fieldset>

